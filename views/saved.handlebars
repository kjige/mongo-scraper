<div class="col-xs-12">
	
  <h2>Saved Articles</h2>
	
  {{#each articles}}
	
  <div class="row well">

    <a href="{{this.link}}"><h4>{{this.title}}</h4></a>

    <form class="pull-left">
      <button type="button" class="btn btn-info btn-sm notes-btn" data-id="{{this.id}}">Comment</button>
    </form>

    <form class="pull-right" action="/{{this.id}}?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
    </form>

	</div>
  
  {{/each}}

</div>